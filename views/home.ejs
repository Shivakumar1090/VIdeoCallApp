<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>video chat application</title>
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Add Peer Library -->
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/peerjs/1.3.1/peerjs.min.js.map"></script>

    <!-- Css  -->
    <link rel="stylesheet" href="/style.css">

    <!-- Add Socket Io library -->
    <script src="/socket.io/socket.io.js"></script>

    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <h2><i class="fa fa-video-camera" style="font-size: 22px; padding-right: 9px;"></i>Calling App</h2>
        </div>
    </div>

    <div class="main">
        <div class="videos_grp">
            <div id="video-grid">
    
            </div>
        </div>
        
        <div class="options">
            <div class="options_up">
                <div id="video" class="option_btn"  type="button" onclick="video()">
                    <i class="fa fa-video-camera"></i>
                </div>
                <div id="mike" class="option_btn" type="button" onclick="microphone()">
                   <i class="fa fa-microphone"></i>
                </div>
            </div>
            <div class="options_down">
                <div id="share-icon" class="option_btn" type="button" onclick="Invite()">
                    <i class="fa fa-user-plus"></i>
                </div>
            </div>
        </div>
    </div>
    <script src="index.js"></script>
</body>
</html>